<div class="form-group">
  {{#if name}}
  <label id="label" class="col-sm-3 control-label">{{name}}</label>
  {{/if}}

  <div class="col-sm-9">
    <div class="row">
      <div class="col-sm-5">
        <div class="input-group">
          <div class="input-group-addon">Width</div>
          <input id="width" type="number" class="form-control" value="{{value.width}}">
        </div>
      </div>

      <div class="col-sm-5">
        <div class="input-group">
          <div class="input-group-addon">Height</div>
          <input id="height" type="number" class="form-control" value="{{value.height}}">
        </div>
      </div>
    </div>
  </div>
</div>
